{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@adapters/*": ["./src/adapters/*"],
            "@usecases/*": ["./src/usecases/*"],
            "@/*": ["./src/*"],
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
